<?xml version='1.0' encoding='utf-8'?>
<widget id="org.sunsetspark.timeritual" version="0.0.1" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Time Ritual</name>
    <description>
        Time Ritual is a game made by 6th grade students for Global GameJam 2016.
    </description>
    <author email="gaelen@sunsetspark.org" href="//sunsetspark.org">
        Sunset Spark
    </author>
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
    <engine name="ios" spec="~4.0.1" />
    <preference name="Fullscreen" value="true" />
    <preference name="orientation" value="landscape" />
</widget>
